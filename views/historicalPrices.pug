extends layout

block content
  h1 Historical Price
  form( action='/api/sentPrice', method="post") 
    table.table.table-striped
          thead
              tr
                th Name
                th Current Price
                th Hisorical Prices
                th New Price
          tbody
            tr
                td= product.productName
                td= product.productPrice
                td= product.historicalPrice
                td
                  input(type="number", name= product.productEAN, min= "0", id="numberNeeded")   
    input(type="submit", value="Submit Price", onclick='numberCheck()')   
    script.
      function numberCheck(){
        var n = document.getElementById("numberNeeded").value;
        if(n == 0) {
        alert('Please enter a value')
        document.close()
        }
      }
  script.
    function previous(){
      window.location.href = '/api/products'
    }
  button(onclick='previous()') Return 
